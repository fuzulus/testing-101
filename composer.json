{
    "name": "mfuzul/testing-101",
    "description": "\"Testing 101\" is a demo code repository for a workshop on the subject.",
    "version": "1.0.0",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "beberlei/assert": "^3.3",
        "composer/package-versions-deprecated": "1.11.99.4",
        "doctrine/doctrine-bundle": "^2.5",
        "doctrine/doctrine-migrations-bundle": "^3.2",
        "doctrine/migrations": "^3.1",
        "doctrine/orm": "^2.10",
        "guzzlehttp/guzzle": "^7.3",
        "myclabs/php-enum": "^1.8",
        "nelmio/cors-bundle": "^2.0",
        "nesbot/carbon": "^2.46",
        "ramsey/uuid": "^4.1",
        "ramsey/uuid-doctrine": "^1.6",
        "symfony/console": "^6.0",
        "symfony/dotenv": "^6.0",
        "symfony/flex": "^1.12",
        "symfony/framework-bundle": "^5.4",
        "symfony/messenger": "^6.0",
        "symfony/monolog-bundle": "^3.6",
        "symfony/proxy-manager-bridge": "^6.0",
        "symfony/runtime": "^5.4",
        "symfony/security-bundle": "^5.4",
        "symfony/uid": "^6.0",
        "symfony/yaml": "^6.0",
        "undabot/json-api-core": "^2.1",
        "undabot/json-api-symfony": "^2.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.6",
        "phpstan/extension-installer": "^1.2",
        "phpstan/phpstan": "^1.2",
        "phpstan/phpstan-beberlei-assert": "^1.0",
        "phpstan/phpstan-phpunit": "^1.3",
        "roave/security-advisories": "dev-latest",
        "symfony/debug-bundle": "^6.0",
        "symfony/stopwatch": "^6.0",
        "symfony/var-dumper": "^6.0",
        "symfony/web-profiler-bundle": "^6.0",
        "vimeo/psalm": "^4.20"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "symfony/flex": true,
            "symfony/runtime": true,
            "phpstan/extension-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "lint": [
            "php-cs-fixer fix --diff --ansi --dry-run"
        ],
        "lint:fix": [
            "php-cs-fixer fix"
        ],
        "qc": [
            "php -d memory_limit=-1 vendor/bin/phpstan analyse -n --ansi --no-progress",
            "./vendor/bin/psalm --memory-limit=-1"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true
        },
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        }
    }
}
